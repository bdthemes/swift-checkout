{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "swift-checkout/add-to-cart",
    "version": "1.0.0",
    "title": "Add to Cart",
    "category": "swift-checkout",
    "icon": "cart",
    "description": "A add to cart block with customizable styles.",
    "keywords": ["add to cart", "cart", "checkout"],
    "supports": {
        "html": false,
        "anchor": true,
        "className": true,
        "color": {
            "text": true,
            "background": true
        },
        "typography": {
            "fontSize": true,
            "lineHeight": true,
            "__experimentalFontFamily": true,
            "__experimentalFontWeight": true,
            "__experimentalFontStyle": true,
            "__experimentalTextTransform": true,
            "__experimentalLetterSpacing": true
        },
        "spacing": {
            "margin": true,
            "padding": true
        }
    },
    "attributes": {
        "content": {
            "type": "string",
            "default": "Add to Cart"
        },
        "productId": {
            "type": "number"
        },
        "auto_add_to_cart": {
            "type": "boolean",
            "default": false
        },
        "tag": {
            "type": "string",
            "default": "h2"
        },
        "align": {
            "type": "string",
            "default": "left"
        },
        "textColor": {
            "type": "string"
        },
        "backgroundColor": {
            "type": "string"
        },
        "fontSize": {
            "type": "string"
        },
        "style": {
            "type": "object"
        },
        "stylePreset": {
            "type": "string",
            "default": "simple"
        }
    },
    "textdomain": "swift-checkout",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css",
    "render": "file:./AddToCart.php"
}
